     </Image>

     <Image Grid.Column="2" WidthRequest="30"  HeightRequest="40" Source="favorito" Margin="0,10,0,10">
         <Image.GestureRecognizers>
             <TapGestureRecognizer Tapped="Button3_Clicked" />
